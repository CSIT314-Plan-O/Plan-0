<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AppTheme"
        android:elevation="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@drawable/setting_linear_layout_design">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="10">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/feedback_and_support"
                android:tint="#000000"/>

        </LinearLayout>

        <TextView
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:id="@+id/feedback_support"
            android:layout_weight="90"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Feedback &amp; Support"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@drawable/setting_linear_layout_design">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="10">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/privacy"
                android:tint="#000000"/>

        </LinearLayout>

        <TextView
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:id="@+id/privacy"
            android:layout_weight="90"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Privacy"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@drawable/setting_linear_layout_design">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="10">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/terms_and_condition"
                android:tint="#000000"/>

        </LinearLayout>

        <TextView
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:id="@+id/terms_and_condition"
            android:layout_weight="90"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Terms &amp; Condition"/>
    </LinearLayout>

</LinearLayout>